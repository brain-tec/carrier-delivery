<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="view_picking_out_form" model="ir.ui.view">
      <field name="name">delivery.stock.picking.out.form</field>
      <field name="model">stock.picking.out</field>
      <field name="inherit_id" ref="base_delivery_carrier_label.view_picking_out_form"/>
      <field name="arch" type="xml">
        <field name="carrier_tracking_ref" position="after">
          <field name="carrier_tracking_url" widget="url"/>
        </field>
        <field name="option_ids" position="after">
          <separator string="Additional Services" attrs="{'invisible': [('carrier_type', '!=', 'postlogistics')]}"/>
          <group attrs="{'invisible': [('carrier_type', '!=', 'postlogistics')]}">
            <field name="cash_on_delivery"/>
          </group>
          <separator string="Delivery instructions" attrs="{'invisible': [('carrier_type', '!=', 'postlogistics')]}"/>
          <group attrs="{'invisible': [('carrier_type', '!=', 'postlogistics')]}">
            <field name="delivery_fixed_date"/>
            <field name="delivery_place"/>
            <field name="delivery_phone"/>
            <field name="delivery_mobile"/>
          </group>
        </field>
      </field>
    </record>

    <record id="view_picking_in_form" model="ir.ui.view">
      <field name="name">delivery.stock.picking.in.form</field>
      <field name="model">stock.picking.in</field>
      <field name="inherit_id" ref="base_delivery_carrier_label.view_picking_in_form"/>
      <field name="arch" type="xml">
        <field name="option_ids" position="after">
          <separator string="Additional Services"/>
          <group>
            <field name="cash_on_delivery"/>
          </group>
          <separator string="Delivery instructions"/>
          <group>
            <field name="delivery_fixed_date"/>
            <field name="delivery_place"/>
            <field name="delivery_phone"/>
            <field name="delivery_mobile"/>
          </group>
        </field>
      </field>
    </record>

  </data>
</openerp>
